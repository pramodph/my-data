package multiThreadingDemos;

class Display1{
	public void display2(String name) {
		synchronized (this) {
			for (int i = 0; i <= 10; i++) {
				System.out.println(i);
			}
		}
	}
}

class ExThread03 extends Thread{
	Display1 d;
	String name;
	public ExThread03(Display1 d1, String name) {
		this.d = d1;
		this.name = name;
	}
	
	public void run() {
		d.display2(name);
	}
}

class ExThread04 extends Thread{
	Display1 d;
	String name;
	public ExThread04(Display1 d1, String name) {
		this.d = d1;
		this.name = name;
	}
	
	public void run() {
		d.display2(name);
	}
}
public class Demo07 {
	public static void main(String[] args) {
		Display1 d1=new Display1();
		ExThread03 t3=new ExThread03(d1,"Dhoni");
		ExThread04 t4=new ExThread04(d1,"Virat");
		t3.start();
		t4.start();
	}
	
}