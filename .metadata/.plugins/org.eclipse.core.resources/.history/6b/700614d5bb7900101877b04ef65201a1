package multiThreadingDemos;

class Display1{
	public void display2(String name) {
		synchronized (d) {//synchronised block synchronized (Display1.class) -for  class level lock
			//synchronized (this) to get the current object lock
			for (int i = 0; i <= 10; i++) {
				System.out.println("Good Mornig "+name);
			}
		}
	}
}

class ExThread03 extends Thread{
	Display1 d;
	String name;
	public ExThread03(Display1 d1, String name) {
		this.d = d1;
		this.name = name;
	}
	
	public void run() {
		d.display2(name);
	}
}

class ExThread04 extends Thread{
	Display1 d;
	String name;
	public ExThread04(Display1 d1, String name) {
		this.d = d1;
		this.name = name;
	}
	
	public void run() {
		d.display2(name);
	}
}
public class Demo07 {
	public static void main(String[] args) {
		Display1 d1=new Display1();
		Display1 d2=new Display1();
		ExThread03 t3=new ExThread03(d1,"Dhoni");
		ExThread04 t4=new ExThread04(d2,"Virat");
		t3.start();
		t4.start();
	}
	
}