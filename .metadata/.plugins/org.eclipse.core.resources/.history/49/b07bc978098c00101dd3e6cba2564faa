package gsquestions;

import java.util.Arrays;

public class PowerOfTen {

	public static void main(String[] args) {
		int[] arr1= {2,55,61,66,462};
		int[] arr2= {1,10,100,1000,10000};
		System.out.println(checkPowerOfTen(arr1));
	}

	private static String checkPowerOfTen(int[] arr) {
		boolean[] res=new boolean[arr.length];
		for(int i=0;i<arr.length;i++) {
			if(arr[i]<0) res[i]=false;
			while(arr[i]%10==0) {
				arr[i]/=10;
			}
			res[i]=arr[i]==1;
		}
		return Arrays.toString(res);
	}

}
